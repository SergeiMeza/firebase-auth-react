{
  "name": "@sergeimeza/firebase-react",
  "version": "1.1.6",
  "private": false,
  "description": "Personal firebase library",
  "main": "lib/cjs/index.js",
  "module": "lib/esm/index.js",
  "types": "lib/esm/index.d.ts",
  "repository": "https://github.com/SergeiMeza/firebase-react.git",
  "author": "SergeiMeza <sergeimeza@gmail.com>",
  "license": "MIT",
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "semi": false
  },
  "scripts": {
    "start": "react-scripts start",
    "build:clean": "rimraf lib",
    "build:esm": "tsc --project tsconfig.compile.json",
    "build:cjs": "tsc --project tsconfig.compile.json --module commonjs --outDir lib/cjs",
    "compile": "yarn build:clean && yarn build:esm && yarn build:cjs",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "dependencies": {},
  "peerDependencies": {
    "@sergeimeza/foundation-react": "1.0.1",
    "firebase": "^9.6.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@sergeimeza/foundation-react": "1.0.1",
    "@types/firebase": "^3.2.1",
    "@types/lodash.debounce": "^4.0.6",
    "@types/node": "^12.0.0",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "firebase": "^9.6.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-scripts": "4.0.3",
    "rimraf": "^3.0.2",
    "typescript": "^4.1.2",
    "web-vitals": "^1.0.1"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
